<script>
  const allTitles = <%- JSON.stringify(allTitles) %>
  const allListings = <%- JSON.stringify(allListings) %>
</script>

<style>
  .filters {
    display: flex;
    justify-content: space-between;
    align-items: center;
    user-select: none !important;
    min-width: 100%;
  }
  .slider-container {
    display: flex;
    justify-content: center;
    align-items: center;
    /* width: 70%; */
    overflow: hidden;
    position: relative;
  }
  .slider {
    scrollbar-width: none;
    -ms-overflow-style: none;
    display: flex;
    align-items: center;
    gap: 10px;
    overflow-x: auto;
    scroll-behavior: smooth;
    width: 85%;
  }
  .filter-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    opacity: 0.7;
    justify-content: center;
    cursor: pointer !important;
    text-align: center;
  }
  .filter-item:hover {
    background-color: #f7f7f7;

    opacity: 1;
  }
  .filter-item p {
    font-size: 0.8rem;
    margin: 0;
  }
  .slider::-webkit-scrollbar {
    display: none; /* Hide scrollbar for smooth scrolling */
  }
  .slider-arrow {
    background-color: #d9d9d9;
    color: black;
    border: none;
    padding: 0.5rem 0.75rem;
    border-radius: 50%;
    cursor: pointer;
    position: absolute;
    transform: none;
    z-index: 2;
  }

  .left-arrow {
    left: -1px;
  }

  .right-arrow {
    right: 0;
  }
  .tax-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid rgba(0, 0, 0, 0.205);
    border-radius: 1rem;
    white-space: nowrap;
    padding: 1rem;
    margin-top: -0.5rem;
    margin-left: 1rem;
    height: 3.25rem;
  }
  .tax-info {
    display: none;
  }
</style>

