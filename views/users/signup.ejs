<% layout("/layouts/boilerplate")%>
<div class="row mt-3">
  <h1 class="small-size-container col-6 offset-3 mb-3">SignUp in Wanderlust</h1>
  <div class="small-size-container col-6 offset-3">
    <form method="POST" action="/signup" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="username" class="from-lable">Username</label>
        <input
          type="text"
          id="username"
          name="username"
          placeholder="Enter your username"
          class="form-control"
          required
        />
        <div class="valid-feedback">looks good!</div>
      </div>
      <div class="mb-3">
        <label for="email" class="from-lable">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          placeholder="Enter your email address"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="from-lable">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          placeholder="Enter your password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success mb-5">SignUp</button>
    </form>
  </div>
</div>
